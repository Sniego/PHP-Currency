{% extends 'base.html.twig' %}

{% block title %}Entry{% endblock %}

{% block body %}
    <h1>Entry</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entry.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entry.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entry.country }}</td>
            </tr>
            <tr>
                <th>Currency Tag</th>
                <td>{{ entry.tag }}</td>
            </tr>
            <tr>
                <th>Value PLN</th>
                <td>{{ entry.valuePln }}</td>
            </tr>
            <tr>
                <th>Vlaue After</th>
                <td>{{ entry.vlaueAfter }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entry.date ? entry.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group btn-group-justified">
        <a href="{{ path('entry_edit', {'id': entry.id}) }}" class="btn btn-primary">Edit</a>
        <a href="{{ path('entry_index') }}" class="btn btn-primary">Back</a>
    </div> 

    {{ include('inc/_delete_form.html.twig') }}
{% endblock %}